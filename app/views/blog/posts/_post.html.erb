<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= post.published_at %>
  </p>

  <p>
    <strong>Content:</strong>
    <div class="blog-post-container">
      <%= post.html_safe_content %>
    </div>
  </p>
</div>
