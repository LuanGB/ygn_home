<!-- HERO -->
<div class="hero">
  <!-- FRONT CONTENT -->
  <div class="front-content">
    <!-- CONTAINER MID -->
    <div class="container-mid">
      <!-- ANIMATION CONTAINER -->
      <div class="animation-container animation-fade-down" data-animation-delay="0">
        <%= image_tag("logo-white.png", class: "img-responsive logo", alt: "image", width: "200px") %>
      </div><!-- /ANIMATION CONTAINER -->
      <!-- ANIMATION CONTAINER -->
      <div class="animation-container animation-fade-right" data-animation-delay="300">
        <h1>Em Breve...</h1>
      </div><!-- /ANIMATION CONTAINER -->
      <!-- ANIMATION CONTAINER -->
      <div class="animation-container animation-fade-left" data-animation-delay="600"> 
        <p class="subline">Nós estamos trabalhando em nosso Website. Cadastre-se abaixo para receber atualizações.</p>
      </div><!-- /ANIMATION CONTAINER -->
      <!-- ANIMATION CONTAINER -->
      <div class="animation-container animation-fade-up" data-animation-delay="900"> 
        <div class="open-popup">Me Notifique!</div>
      </div><!-- /ANIMATION CONTAINER -->
    </div><!-- /CONTAINER MID -->
    <!-- FOOTER -->
    <div class="footer">
      <!-- ANIMATION CONTAINER -->
      <div class="animation-container animation-fade-up" data-animation-delay="1200">
        <p>© 2024 YGN | Design by <a target="_blank" href="https://templatefoundation.com">Template Foundation</a></p>
      </div><!-- /ANIMATION CONTAINER -->
    </div><!-- /FOOTER -->
  </div><!-- /FRONT CONTENT -->

  <!-- BACKGROUND CONTENT -->
  <div class="background-content parallax-on">
    <div class="background-overlay"></div>
    <div class="background-img layer" data-depth="0.05"></div>
  </div><!-- /BACKGROUND CONTENT -->
</div><!-- /HERO -->


<!-- POPUP ( SUBSCRIBE ) -->
<div class="popup">
  <!-- CARD -->
  <div class="card">
    <!-- CARD CLOSE BUTTON -->
    <div class="close-popup close-button"></div>

    <i class="fa fa-envelope-o" aria-hidden="true"></i>
    <h3>Se Inscreva!</h3>
    <p class="subline">E receba notificações de quando o nosso site lançar.</p>

    <!-- FORM -->
    <%= form_with url: "/api/v1/newsletter_subscription/subscribe", method: :post, model: Subscription.new, class:"subscribe-form" do |form| %>
      <%= form.text_field(:email, placeholder:"* Seu Email", onfocus:"this.placeholder = ''", onblur:"this.placeholder = '* Seu Email'", class:"email form-control")%>
      <%= form.submit "Enviar!", class: "btn btn-primary form-control button" %>

      <!-- SUCCESS-ERROR MESSAGE -->
      <div class="error-message">* Insira um email Válido!</div>
      <div class="success-message">* Inscrito com Sucesso!</div>
      <!-- /SUCCESS-ERROR MESSAGE -->
    <% end %><!-- /FORM -->
  </div><!-- /CARD -->
</div><!-- /POPUP ( SUBSCRIBE ) -->
