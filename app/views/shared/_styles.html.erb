<!-- START: Styles -->

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,700%7cOpen+Sans:400,700" rel="stylesheet" type="text/css">

<!-- Stylesheets Libs -->
<%= stylesheet_link_tag "bootstrap/dist/css/bootstrap.min.css" %>
<%= stylesheet_link_tag "ionicons/css/ionicons.min.css" %>
<%= stylesheet_link_tag "flickity/dist/flickity.min.css" %>
<%= stylesheet_link_tag "photoswipe/dist/photoswipe.css" %>
<%= stylesheet_link_tag "photoswipe/dist/default-skin/default-skin.css" %>
<%= stylesheet_link_tag "bootstrap-slider/dist/css/bootstrap-slider.min.css" %>
<%= stylesheet_link_tag "summernote/dist/summernote-bs4.css" %>

<!-- FontAwesome -->
<script defer src="<%= asset_path('fontawesome-free/js/all.js') %>"></script>
<script defer src="<%= asset_path('fontawesome-free/js/v4-shims.js') %>"></script>

<%= stylesheet_link_tag "shared/goodgames.css", "data-turbo-track": "reload" %>
<%= stylesheet_link_tag "shared/custom.css", "data-turbo-track": "reload" %>

<script src="<%= asset_path('jquery/dist/jquery.min.js') %>"></script>

<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
<% resource_stylesheets.each do |resource_stylesheet| %>
  <%= stylesheet_link_tag(resource_stylesheet, "data-turbo-track": "reload") %>
<% end %>